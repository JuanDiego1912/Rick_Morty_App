        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Rick_Morty_App" parent="Base.Theme.Rick_Morty_App" />
    
    <style name="etiqueta">
        <item name="background">@drawable/background_eti_fab</item>
        <item name="android:textColor">@color/green_rick_and_morty</item>
    </style>

    <style name="TextoNeonAzul">
        <item name="android:textColor">@color/blue_rick_and_morty</item>
        <item name="android:shadowColor">@color/azul_semiopaco</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/rick_and_mortys_font</item>
    </style>

    <style name="TextoNeonVerde">
        <item name="android:textColor">@color/green_rick_and_morty</item>
        <item name="android:shadowColor">@color/animation_background_color</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/rick_and_mortys_font</item>
    </style>

    <style name="EstiloRecyclerView">
        <item name="android:background">@color/azul_oscuro</item>
    </style>

    <style name="ChipStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/green_rick_and_morty</item>
        <item name="android:fontFamily">@font/rick_and_morty_font</item>
        <item name="android:backgroundTint">@color/black</item>
