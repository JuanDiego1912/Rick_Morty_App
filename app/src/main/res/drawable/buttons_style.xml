<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/green_rick_and_morty"/>
            <corners android:radius="12dp"/>
            <stroke android:width="4dp" android:color="@color/green_rick_and_morty"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/blue"/>
            <corners android:radius="12dp"/>
            <stroke android:width="4dp" android:color="@color/blue_rick_and_morty"/>
        </shape>
    </item>
</selector>